  "main": "dist/index.js",
  "type": "commonjs",
  "files": [
    "dist"
  ],
 "scripts": {
  "test": "echo \"Error: no test specified\" && exit 1",
  "db:ui": "erd-ui erd.txt",
  "db seed": "ts-node ./seed/seed.ts",
  "db:setup": "npm run db:migrate && ts-node ./seed/seed.ts",
  "db:dev": "run-s db:migrate db:plan db:update",
  "db:migrate": "knex migrate:latest",
  "db:plan": "auto-migrate db.sqlite3 < erd.txt",
  "db:rename": "auto-migrate --rename db.sqlite3 < erd.txt",
  "db:update": "run-s db:migrate db:gen-proxy",
  "db:gen-proxy": "erd-to-proxy < erd.txt > proxy.ts"
},

  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "better-sqlite3-proxy": "^2.11.3",
    "better-sqlite3-schema": "^3.1.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "formidable": "^3.5.4",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "underscore": "^1.13.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/formidable": "^3.4.6",
    "@types/knex": "^0.15.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "quick-erd": "^4.29.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "underscore": "^1.13.6"
  }
}
